<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>Mark Goodrich</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://dev.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>1.9.0</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>${project.parent.groupId}.${project.parent.artifactId}.ProviderManagementActivator</activator>
	

    <!-- Required Modules -->
    <!-- logic module is required because it is where the Groovy jar comes from -->
    <require_modules>
        <require_module>org.openmrs.logic</require_module>
        <require_module>org.openmrs.module.uiframework</require_module>
        <require_module>org.openmrs.module.uilibrary</require_module>
    </require_modules>


	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate files, if present -->
	<mappingFiles>
		Provider.hbm.xml
        ProviderRole.hbm.xml
        ProviderSuggestion.hbm.xml
		SupervisionSuggestion.hbm.xml
	</mappingFiles>

    <!-- Required Global Properties -->
    <globalProperty>
        <property>providermanagement.personAttributeTypes</property>
        <defaultValue></defaultValue>
        <description>
            Person attributes to display on the provider dashboard: specified as a pipe-delimited list of person attribute type uuids
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.providerSearchDisplayFields</property>
        <defaultValue>Name:personName|Identifier:provider.identifier|Role:provider.providerRole</defaultValue>
        <description>
            Fields to display in the provider search box; specified as a pipe-delimited list of key/value pairs
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.providerListDisplayFields</property>
        <defaultValue>Name:personName</defaultValue>
        <description>
            Fields to display in the provider lists; specified as a pipe-delimited list of key/value pairs
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.patientSearchDisplayFields</property>
        <defaultValue>Name:personName</defaultValue>
        <description>
            Fields to display in the patient search box; specified as a pipe-delimited list of patient fields
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.patientListDisplayFields</property>
        <defaultValue>Name:personName</defaultValue>
        <description>
            Fields to display in the patient lists; specified as a pipe-delimited list of key/value pairs
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.personSearchDisplayFields</property>
        <defaultValue>Name:personName</defaultValue>
        <description>
            Fields to display in the person searches; specified as a pipe-delimited list of key/value pairs
        </description>
    </globalProperty>

    <globalProperty>
        <property>providermanagement.advancedSearchPersonAttributeType</property>
        <defaultValue></defaultValue>
        <description>
            Person attribute type to use as a search field on the advanced search page
        </description>
    </globalProperty>

    <!--  Extension Points -->
     <extension>
         <point>org.openmrs.patientDashboard.overviewBox</point>
         <class>org.openmrs.module.providermanagement.extension.html.PatientDashboardOverviewExt</class>
     </extension>

    <!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

